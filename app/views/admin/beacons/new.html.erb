<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([:admin, @beacon]) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :major %>
        <%= f.text_field :major, class: 'form-control' %>

        <%= f.submit "Create beacon", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>